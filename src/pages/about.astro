---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const pageTitle = "About Stephan Hofburg | Graphic Designer";
const pageDescription = "Learn more about Stephan Hofburg, a graphic designer specializing in branding and logo design. Discover the story, skills, and passion behind the portfolio.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Navigation currentPage="about" /> {/* Setting currentPage to "about" */}

  <main class="bg-gray-50 py-20">
    <div class="container mx-auto px-8">
      <section id="about-content" class="bg-white rounded-lg shadow-md p-8">
        <h1 class="text-3xl font-bold mb-6">About Me</h1>
        <p class="text-gray-700 leading-relaxed mb-4">
          [Placeholder text for your About page content.  You can replace this with your actual bio, skills, experience, design philosophy, etc.  Think about what you want to share about yourself as a designer.]
        </p>
        <p class="text-gray-700 leading-relaxed mb-4">
          [Add more paragraphs here to elaborate on your story, expertise, and what you bring to your design work. You can also include sections about your values, approach to projects, or anything else you want potential clients or visitors to know about you.]
        </p>
        {/* You can add more sections, images, etc. here as needed */}
      </section>
    </div>
  </main>

</Layout>