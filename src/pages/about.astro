---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import { SITE_DATA } from '../data/site';
---
<Layout title="About Me | usrarama">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8">About Me</h1>

    <div class="prose max-w-none text-gray-800 mt-8">
      <p>{SITE_DATA.bio}</p>
    </div>

    <div class="mt-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Skills</h2>
      <div class="flex flex-wrap gap-3">
        {SITE_DATA.skills.map(skill => (
          <span class="bg-gray-200 text-gray-700 px-4 py-2 text-sm font-semibold rounded-full">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <div class="mt-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">See my CV</h2>
        <a
          href="/pdfs/CV_landscape.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block mt-2 bg-accent text-white font-bold py-3 px-6 rounded-lg hover:bg-opacity-80 transition-colors"
        >
          View Curriculum Vitae
        </a>
    </div>

  </div>
</Layout>