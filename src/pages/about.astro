---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';

// This is where you can define your bio text and skills
const bio = "I'm a graphic designer who loves turning photos and anime images into eye-catching posters and designs. My passion lies in creating unique brand identities with logos and visuals that tell a compelling story in a memorable way. I believe that good design is not just about aesthetics, but about clear communication and creating a lasting impact.";

const skills = [
  'Branding & Identity',
  'Poster Design',
  'Logo Design',
  'UI/UX',
  'Figma',
  'Adobe Illustrator',
  'Adobe Photoshop',
];
---
<Layout title="About Me | usrarama">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8">About Me</h1>

    <div class="prose max-w-none text-gray-800 mt-8">
      <p>{bio}</p>
    </div>

    <!-- Enhanced Skills Section -->
    <div class="mt-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Skills</h2>
      <div class="flex flex-wrap gap-3">
        {skills.map(skill => (
          <span class="bg-gray-200 text-gray-700 px-4 py-2 text-sm font-semibold rounded-full">
            {skill}
          </span>
        ))}
      </div>
    </div>

  </div>
</Layout>