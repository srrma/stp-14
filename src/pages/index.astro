---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ProjectShowcase from '../components/ProjectShowcase.astro';
---
<Layout title="Home | usrarama">
	
	<!-- 1. The Project Showcase Section -->
	<ProjectShowcase />

	<!-- 2. The "Hi, I'm usrarama" CTA Section -->
	<section class="bg-[#5b58f4] text-white py-20 sm:py-32">
		<div class="container mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">
			
			<!-- Left Column: The Big Text -->
			<div class="text-center md:text-left">
				<h1 class="text-6xl sm:text-7xl font-bold leading-tight">
					Hi, <br />
					I'm usrarama.
				</h1>
				<a 
					href="/projects" 
					class="inline-block mt-8 bg-white text-[var(--color-primary)] font-bold px-8 py-3 rounded-lg
						   hover:bg-gray-200 transition-colors duration-300"
				>
					View Portfolio
				</a>
			</div>

			<!-- Right Column: The Paragraph and Social Links -->
			<div class="text-center md:text-left">
				<p class="text-lg sm:text-xl leading-relaxed">
					I'm a graphic designer who loves turning photos and anime images into eye-catching posters and designs. I also create unique brand identities with logos and visuals that tell your story in a memorable way.
				</p>
				<div class="flex gap-6 mt-8 justify-center md:justify-start">
					<!-- Reusing the SVG icons from our Footer tutorial -->
					
				</div>
			</div>

		</div>
	</section>

</Layout>